<div class="container full-width rounded full-height">
    <div class="row">
        {{#ifeq env production}}
            {{#if data.event.image.exists}}
                <div class="banner limit-height three-quarter" style="background-image: url('{{data.event.image.url}}');"></div>
            {{/if}}
        {{else}}
            {{#if data.event.image.exists}}
                <div class="banner limit-height three-quarter" style="background-image: url('{{data.event.image.url}}');"></div>
            {{else}}
                <div class="banner limit-height three-quarter" style="background-image: url('/images/carbon-fibre.jpg');"></div>
            {{/if}}
        {{/ifeq}}
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
            <div class="event full-height">
                <h3>{{data.event.title}}</h3>
                {{#if facebookLink}}
                    <div class="event-link"><a href="//{{data.event.facebookLink}}" target="_blank">Facebook Event</a></div>
                {{/if}}
                <div class="date">{{date data.event.date format='MMM Do YYYY, h:ma'}}</div>
                <div class="location">Location: {{{data.event.location}}}</div>
                <div class="description">{{{data.event.description}}}</div>
            </div>
        </div>
    </div>
</div>